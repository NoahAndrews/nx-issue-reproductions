{
    "compilerOptions": {
        "noEmitOnError": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "inlineSourceMap": true,
        "declarationMap": true,
        "inlineSources": true,
        "allowJs": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "declaration": true,
        "target": "es2020",
        "module": "esnext",
        "moduleResolution": "Node",
        "skipLibCheck": true
    }
}
